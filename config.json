{
  "audio": {
    "device_name_contains": "USB AUDIO",
    "sample_seconds": 10,
    "sample_rate": 44100,
    "channels": 1,
    "output_wav": "sample.wav"
  },

  "image": {
    "canvas_size": 64,
    "top_margin": 1,
    "bottom_margin": 1,
    "cover_size": 46,
    "margin_image_text": 3,
    "line_height": 5,
    "line_spacing_margin": 3,
    "font_path": "DejaVuSans.ttf",
    "font_size": 7,
    "use_dynamic_font": true,
    "background_color": [255, 255, 255],
    "text_color_mode": "dominant",
    "text_color_manual": [0, 0, 0],
    "uppercase": true,
    "preview_scale": 8
  },
  "divoom": {
    "ip": "", 
    "timeout": 0.3,
    "gif_speed_ms": 100,
    "auto_reset_gif_id": true,
    "discovery": {
      "enabled": true,
      "subnet_prefix": "192.168.2.",
      "ip_range_start": 2,
      "ip_range_end": 254
    }
  },
  "debug": {
        "logs" : false,
        "pixoo_frame_path": "",
        "preview_path": "",
        "output_wav": ""
  },
  "fallback": {
    "enabled": true,
    "image_path": "assets/fallback.png"
  },

  "output": {
    "pixoo_frame_path": "pixoo64_static.png",
    "preview_path": "pixoo64_static_preview.png"
  }
}
